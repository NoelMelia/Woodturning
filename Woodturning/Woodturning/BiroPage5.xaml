<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Woodturning.BiroPage5">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Step 5 of Woodturning a Biro"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="Red"/>
                <Image x:Name="Test" Aspect="AspectFit"/>
                <Label FontSize="Medium" Text="&#x2022;For this step it is best to use the tool specially made for this or you could use sand paper and a square."/>
                <Label FontSize="Medium" Text="&#x2022;This makes the wood flush and square with the tubes."/>
                <Label FontSize="Medium" Text="&#x2022; Be careful not to drill down to far because then the tube will stick out and in the final product you will have a gap in the joint of the pen."/>
                <Image x:Name="Test2" Aspect="AspectFit"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>