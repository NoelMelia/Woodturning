<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Woodturning.BowlPage4">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Step 4 of Woodturning a Bowl"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="Red"/>
                <Image x:Name="Test" Aspect="AspectFit"/>
                <Label Text="&#x2022;Turn away the shadow potion."/>
                <Label Text="&#x2022;Now imagine 2 bowls facing each other."/>
                <Label Text="&#x2022;Use a parting tool to make a shallow cut to help identify the bowls."/>
                <Label Text="&#x2022;Turn the outside of each bowl shape including the foot and a small tenon."/>
                <Label Text="&#x2022;Sand the outside of the bowls."/>
                <Label Text="&#x2022;Now use the parting tool to extend the center cut down until there is a very small tenon."/>
                <Label Text="&#x2022;Step 5 will continue in making of bowl"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>