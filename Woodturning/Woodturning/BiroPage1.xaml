<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Woodturning.BiroPage1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Step 1 of Woodturning a Biro"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="Red"/>
                <Image x:Name="Test" Aspect="AspectFit"/>
                <Label FontSize="Medium" Text="&#x2022;For this Instructable you need these supplies to design a Wooden Biro."/>
                <Label FontSize="Medium" Text="&#x2022;Most of these tools you can substitute for something else cheaper."/>
                <Label FontSize="Medium" Text="&#x2022;Lathe"/>
                <Label FontSize="Medium" Text="&#x2022;Skew (the tool that you turn the wood with)"/>
                <Label FontSize="Medium" Text="&#x2022;Wood ( i'm using yellow heart one of my favorites)"/>
                <Label FontSize="Medium" Text="&#x2022;CA glue or Super Glue (thick and thin if possible)"/>
                <Label FontSize="Medium" Text="&#x2022;Mandrel to hold the pen on with 3 bushings"/>
                <Label FontSize="Medium" Text="&#x2022;Sand paper"/>
                <Label FontSize="Medium" Text="&#x2022;Pen Kit or you could use pieces from a old pen that you don't use anymore"/>
                <Label FontSize="Medium" Text="&#x2022;Paper towels"/>
                <Label FontSize="Medium" Text="&#x2022;BLO (boiled linseed oil)"/>
                <Label FontSize="Medium" Text="&#x2022;Drill press or equivalent"/>
                <Label FontSize="Medium" Text="&#x2022;Clamp"/>
                <Label FontSize="Medium" Text="&#x2022;BLO (boiled linseed oil)"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
