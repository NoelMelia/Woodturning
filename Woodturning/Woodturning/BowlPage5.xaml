<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Woodturning.BowlPage5">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Step 5 of Woodturning a Bowl"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="Red"/>
                <Image x:Name="Test" Aspect="AspectFit"/>
                <Label FontSize="Medium" Text="&#x2022;Remove this from the lathe and cut it in half with a handsaw."/>
                <Label FontSize="Medium" Text="&#x2022;If the tenon is small enough you may be able to simply twist the two apart."/>
                <Label FontSize="Medium" Text="&#x2022;You now have 2 side grain bowls."/>
                <Image x:Name="Test2" Aspect="AspectFit"/>
                <Label FontSize="Medium" Text="&#x2022;Mount a faceplate with a waste piece of wood on the lathe and turn a small hole for the little tenon on the bowl bottom."/>
                <Label FontSize="Medium" Text="&#x2022;Then glue the bowl into the wasteblock."/>
                <Label FontSize="Medium" Text="&#x2022;Step 6 will continue in making of bowl"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>