                <Label Text="&#x2022;But drilling on a lathe? Yes it can be done with a supernova chuck and a drill attachment."/>
                <Image x:Name="Test2" Aspect="AspectFit"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>